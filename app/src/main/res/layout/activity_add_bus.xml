<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Bus"
        android:paddingLeft="30dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#ff0000"
        android:gravity="left"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:text="Add or edit your bus"
        android:textSize="13dp"
        android:fontFamily="sans-serif"
        android:textColor="#ff0000"
        tools:ignore="RtlSymmetry,SmallSp,TextSizeCheck" />

    <LinearLayout
        android:id="@+id/bus_form"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:gravity="left"
        android:orientation="vertical">

        <EditText
            android:id="@+id/bus_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:hint="Bus Name"
            android:inputType="textEmailAddress"
            android:textColor="#ff0000"
            android:textColorHint="#ff0000"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/bus_capacity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Capacity"
            android:inputType="number"
            android:textColor="#ff0000"
            android:textColorHint="#ff0000"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/bus_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Price"
            android:inputType="number"
            android:textColor="#ff0000"
            android:textColorHint="#ff0000"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Bus Type\t\t"
            android:textColor="#ff0000"
            android:textSize="18dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/baseline_directions_bus_24" />
        <Spinner
            android:id="@+id/bus_type_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Departure\t"
            android:textColor="#ff0000"
            android:textSize="18dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/baseline_house_24" />
        <Spinner
            android:id="@+id/bus_departure"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Arrival\t\t\t\t\t"
            android:textColor="#ff0000"
            android:textSize="18dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/baseline_arrow_forward_24" />
        <Spinner
            android:id="@+id/bus_arrival"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="Facilities"
        android:textColor="#ff0000"
        android:textSize="18dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        >

        <CheckBox
            android:id="@+id/AC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="70dp"
            android:text="AC"
            android:textColor="#ff0000"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/Wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="70dp"
            android:text="Wifi"
            android:textColor="#ff0000"
            android:textSize="18dp" />
        <CheckBox
            android:id="@+id/Toilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Toilet"
            android:textColor="#ff0000"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        >

        <CheckBox
            android:id="@+id/LCD_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="35dp"
            android:text="LCD TV"
            android:textColor="#ff0000"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/Coolbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="35dp"
            android:text="Coolbox"
            android:textColor="#ff0000"
            android:textSize="18dp" />
        <CheckBox
            android:id="@+id/Lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Lunch"
            android:textColor="#ff0000"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        >

        <CheckBox
            android:id="@+id/Large_baggage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Baggage"
            android:textColor="#ff0000"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck" />

        <CheckBox
            android:id="@+id/electric_socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electric Socket"
            android:textColor="#ff0000"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="ADD"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        android:textColor="@color/white"
        android:backgroundTint="#ff0000" />


</LinearLayout>